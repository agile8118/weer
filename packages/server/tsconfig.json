{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "NodeNext",
    "strict": true,

    "declaration": true,
    "declarationMap": false,
    "sourceMap": true,
    "removeComments": true,

    "esModuleInterop": true,
    "types": ["node"],

    "outDir": "dist",
    "rootDir": "src",
    "verbatimModuleSyntax": true,
    "skipLibCheck": true
  },
  "include": ["src"]
}
