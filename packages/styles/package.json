{
  "name": "@weer/styles",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "dev": "sass src/main.scss ../server/public/styles.css --watch",
    "compile:sass": "sass src/main.scss ../server/public/style.comp.css",
    "concat:css": "concat -o ../server/public/style.concat.css ../server/public/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b \"last 10 versions\" ../server/public/style.concat.css -o ../server/public/style.prefix.css",
    "compress:css": "sass ../server/public/style.prefix.css ../server/public/styles.css --style=compressed --no-source-map",
    "cleanup": "rm ../server/public/style.prefix.css ../server/public/style.concat.css ../server/public/style.comp.css",
    "build": "npm-run-all compile:sass concat:css prefix:css compress:css cleanup"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^10.2.4",
    "concat": "^1.0.3",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.6",
    "postcss-cli": "^8.3.1"
  },
  "dependencies": {
    "sass": "^1.97.1"
  }
}
